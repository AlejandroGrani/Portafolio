---
import Layout from '../layouts/Layout.astro';
import Badge from '../components/Badge.astro';
import SectionContainer from '../components/SectionContainer.astro';
import LinkedInIcon from '../components/icons/Linkedin.astro';
import GmailIcon from '../components/icons/Gmail.astro'
import Experience from '../components/Experience.astro';
import CodeIcon from '../components/icons/Code.astro';
import GitIcon from '../components/icons/Git.astro';
import Projects from '../components/Projects.astro';
import CardUrl from '../components/CardUrl.astro';
import CardPro from '../components/CardPro.astro';
import Tarjeta from '../components/Tarjeta.astro';
import '../components/estilos/Goku.css'; 
import Skills from '../components/Skills.astro';
---

<Layout title="Portafolio de Alejandro Granifo - Desarrollador y Programador">
    <main class="px-4">
        
        <SectionContainer class="py-44 pb-32">
            <h1 class="text-white text-4xl font-bold flex flex-wrap items-center gap-x-4 pb-6 lg:pb-10">
                Hola!! Soy Alejandro 
                
                
                

                
                
            </h1>
            
            <h2 class="text-xl lg:text-wrap mb-5 max-w-[700px]">
                Soy un profesional titulado en Ingeniería Informática, con
                conocimientos en el desarrollo de software.
            </h2>
            
            <ul class="flex space-x-6">
                <li>
                    <a href="https://www.linkedin.com/in/alejandro-granifo-494221307/" class="bg-white/5 border border-white/10 rounded-full flex justify-center items-center gap-x-2 py-2 px-4 transition hover:scale-110 hover:bg-white/10">
                        <LinkedInIcon class="w-8 h-8"/> 
                        <span class="text-white">LinkedIn</span>
                    </a>
                </li>
                <li>
                    <a href="mailto:granifo.ale@gmail.com?subject=Asunto%20del%20mensaje&body=Texto%20del%20mensaje" class="bg-white/5 border border-white/10 rounded-full flex justify-center items-center gap-x-2 py-2 px-4 transition hover:scale-110 hover:bg-white/10">
                        <GmailIcon class="w-7 h-7"/> 
                        <span class="text-white">granifo.ale@gmail.com</span>
                    </a>
                </li>
                <li>
                    <a href="https://github.com/AlejandroGrani" class="bg-white/5 border border-white/10 rounded-full flex justify-center items-center gap-x-2 py-2 px-4 transition hover:scale-110 hover:bg-white/10">
                        <GitIcon class="w-8 h-8"/> 
                        <span class="text-white">Github</span>
                    </a>
                </li>
            </ul>
        </SectionContainer>
        
        <SectionContainer id="experiencia">
            <h2 class="text-3xl font-semibold mb-7"> Experiencia Laboral: </h2>
            <Experience/>
        </SectionContainer>

        <SectionContainer id="proyectos">
            <h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center pb-5 ">
                <CodeIcon class="size 8" />
                Proyectos:
            </h2>
            <Projects/>
            
            <!-- Tarjeta de proyecto URL Shortener -->
            <div class="flex flex-wrap justify-center gap-x-8 gap-y-4">
                <CardUrl />
                <CardPro />
            </div>
        </SectionContainer>

        <SectionContainer id="habilidades">
            <h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center pb-5"> Habilidades: </h2>
            <Skills />
        </SectionContainer> 
        
        <SectionContainer id="contacto">
            <h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center pb-5"> Currículum: </h2>
            <Tarjeta />
        </SectionContainer>    

        

    </main>
</Layout>
